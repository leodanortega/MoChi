<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mochi.controladores.FXMLGestionProveedoresController"
            prefWidth="700" prefHeight="500">

    <!-- Título -->
    <Label text="Lista de Proveedores" style="-fx-font-size: 20px;" layoutX="10" layoutY="10" />

    <!-- Botón Regresar -->
    <Button text="Regresar" layoutX="600" layoutY="10" onAction="#regresarVentana" />

    <!-- Tabla de Proveedores -->
    <TableView fx:id="tablaProveedores" layoutX="10" layoutY="50" prefWidth="680" prefHeight="380">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="140" />
            <TableColumn fx:id="colRfc" text="RFC" prefWidth="120"/>
            <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="160" />
            <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120" />
            <TableColumn fx:id="colEmail" text="Email" prefWidth="140" />
        </columns>
    </TableView>

    <!-- Botones de Acción -->
    <HBox spacing="10" layoutX="400" layoutY="440" prefWidth="290" prefHeight="40" style="-fx-padding: 5;">
        <Button text="Agregar" onAction="#agregarProveedor" prefWidth="80"/>
        <Button text="Modificar" onAction="#modificarProveedor" prefWidth="80"/>
        <Button text="Eliminar" onAction="#eliminarProveedor" prefWidth="80"/>
    </HBox>

</AnchorPane>
