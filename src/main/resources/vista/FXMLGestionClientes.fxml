<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mochi.controladores.FXMLGestionClientesController"
            prefWidth="700" prefHeight="500">

    <!-- Título -->
    <Label text="Lista de Clientes" style="-fx-font-size: 20px;" layoutX="10" layoutY="10" />

    <!-- Botón Regresar -->
    <Button text="Regresar" layoutX="600" layoutY="10" onAction="#regresarVentana" />

    <!-- Campo de búsqueda -->
    <TextField fx:id="txtBuscar" promptText="Buscar cliente por nombre o RFC" layoutX="10" layoutY="45" prefWidth="680" />

    <!-- Tabla de Clientes -->
    <TableView fx:id="tablaClientes" layoutX="10" layoutY="80" prefWidth="680" prefHeight="350">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="140" />
            <TableColumn fx:id="colRfc" text="RFC" prefWidth="120" />
            <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="160" />
            <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120" />
            <TableColumn fx:id="colEmail" text="Email" prefWidth="140" />
        </columns>
    </TableView>

    <!-- Botones de Acción -->
    <HBox spacing="10" layoutX="400" layoutY="440" prefWidth="290" prefHeight="40" style="-fx-padding: 5;">
        <Button text="Agregar" onAction="#agregarCliente" prefWidth="80"/>
        <Button text="Modificar" onAction="#modificarCliente" prefWidth="80"/>
        <Button text="Eliminar" onAction="#eliminarCliente" prefWidth="80"/>
    </HBox>

</AnchorPane>
