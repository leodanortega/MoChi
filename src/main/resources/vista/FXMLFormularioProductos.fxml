<?xml version="1.0" encoding="UTF-8"?>

        <?import java.lang.*?>
        <?import java.lang.*?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="320.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mochi.controladores.FXMLFormularioProductosController">
<children>

    <Label fx:id="lbNombre" layoutX="20" layoutY="20" text="Nombre:" />
    <TextField fx:id="tfNombre" layoutX="150" layoutY="16" prefWidth="220" promptText="Nombre del producto" />

    <Label fx:id="lbPresentacion" layoutX="20" layoutY="60" text="Presentación:" />
    <TextField fx:id="tfPresentacion" layoutX="150" layoutY="56" prefWidth="220" promptText="Ej. Botella 600ml" />

    <Label fx:id="lbCosto" layoutX="20" layoutY="100" text="Costo:" />
    <TextField fx:id="tfCosto" layoutX="150" layoutY="96" prefWidth="220" promptText="Ej. 12.50" />

    <Label fx:id="lbCantidadActual" layoutX="20" layoutY="140" text="Cantidad actual:" />
    <TextField fx:id="tfCantidadActual" layoutX="150" layoutY="136" prefWidth="220" promptText="Ej. 20" />

    <Label fx:id="lbCantidadMinima" layoutX="20" layoutY="180" text="Cantidad mínima:" />
    <TextField fx:id="tfCantidadMinima" layoutX="150" layoutY="176" prefWidth="220" promptText="Ej. 5" />

    <Button fx:id="btnGuardar" layoutX="150" layoutY="240" onAction="#guardarProducto" prefWidth="100" text="Guardar" />

</children>
</AnchorPane>
