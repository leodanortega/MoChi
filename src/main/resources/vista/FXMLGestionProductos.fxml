<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mochi.controladores.FXMLGestionProductosController"
            prefWidth="700" prefHeight="500">

    <!-- Título -->
    <Label text="Lista de Productos" style="-fx-font-size: 20px;" layoutX="10" layoutY="10" />

    <!-- Campo de búsqueda -->
    <TextField fx:id="txtBuscar" promptText="Buscar por nombre..." layoutX="10" layoutY="40" prefWidth="300" />

    <!-- Botón Regresar -->
    <Button text="Regresar" layoutX="600" layoutY="10" onAction="#regresarVentana" />

    <!-- Tabla de Productos -->
    <TableView fx:id="tablaProductos" layoutX="10" layoutY="80" prefWidth="680" prefHeight="350">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50" />
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120" />
            <TableColumn fx:id="colPresentacion" text="Presentación" prefWidth="120" />
            <TableColumn fx:id="colCosto" text="Costo" prefWidth="80" />
            <TableColumn fx:id="colCantidadActual" text="Cantidad Actual" prefWidth="120" />
            <TableColumn fx:id="colCantidadMinima" text="Cantidad Mínima" prefWidth="120" />
        </columns>
    </TableView>

    <!-- Botones de Acción -->
    <HBox spacing="10" layoutX="400" layoutY="440" prefWidth="290" prefHeight="40" style="-fx-padding: 5;">
        <Button text="Agregar" onAction="#agregarProducto" prefWidth="80"/>
        <Button text="Modificar" onAction="#modificarProducto" prefWidth="80"/>
        <Button text="Eliminar" onAction="#eliminarProducto" prefWidth="80"/>
    </HBox>

</AnchorPane>
