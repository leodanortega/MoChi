<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mochi.controladores.FXMLPrincipalAdminController">

    <!-- Barra superior -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
           <children>
               <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="MoChi" />
               <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER_RIGHT">
                  <children>
                      <Label fx:id="lblNombreUsuario" style="-fx-font-size: 14px;" text="Bienvenido: Admin" />
                      <Button onAction="#btnCerrarSesion" text="Cerrar Sesión" />
                  </children>
               </HBox>
           </children>
        </HBox>
    </top>

    <!-- Contenido principal con botones -->
    <center>
        <GridPane alignment="CENTER" hgap="20" vgap="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
           <children>
   
               <Button fx:id="btnGestionProveedores" onAction="#btnGestionProveedores" text="Gestión de Proveedores" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <Button fx:id="btnGestionPedidos" onAction="#btnGestionPedidos" text="Gestión de Pedidos a Proveedores" GridPane.columnIndex="1" GridPane.rowIndex="0" />
               <Button fx:id="btnGestionPromociones" onAction="#btnGestionPromociones" text="Gestión de Promociones" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <Button fx:id="btnRegistroCompras" onAction="#btnRegistroCompras" text="Registro de Compras" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Button fx:id="btnGestionPersonal" onAction="#btnGestionPersonal" text="Gestión de Personal" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <Button fx:id="btnVerReportes" onAction="#btnVerReportes" text="Visualización de Reportes" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button fx:id="btnGestionProductos" mnemonicParsing="false" onAction="#btnGestionProductos" text="Productos" GridPane.rowIndex="3" />
           </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
         </rowConstraints>
        </GridPane>
    </center>

</BorderPane>
