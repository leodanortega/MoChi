<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mochi.controladores.FXMLPrincipalEmpleadoController">

    <!-- Barra superior -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="MoChi"/>
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER_RIGHT">
                    <children>
                        <Label fx:id="lblNombreUsuario" style="-fx-font-size: 14px;" text="Bienvenido: Empleado"/>
                        <Button onAction="#btnCerrarSesion" text="Cerrar Sesión"/>
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- Contenido principal con botones -->
    <center>
        <GridPane alignment="CENTER" hgap="20" vgap="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button fx:id="btnGestionClientes" onAction="#btnGestionClientes" text="Gestión de Clientes" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button fx:id="btnRealizarVentas" onAction="#btnRealizarVentas" text="Realizar Ventas" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button fx:id="btnConsultaProductos" onAction="#btnConsultaProductos" text="Consulta de Productos y Promociones" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
            </children>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
    </center>

</BorderPane>
